{{>header}}

<!-- Register -->
<div class="container auth">
    <form action="#/user/register" method="POST">
        <fieldset>
            <legend>Register</legend>
            <blockquote>Knowledge is not simply another commodity. On the contrary. Knowledge is never used up. It
                increases by diffusion and grows by dispersion.</blockquote>
            <p class="field email">
                <input type="email" id="defaultFormCardNameEx" name="username" placeholder="maria@email.com">
                <label for="defaultFormCardNameEx">Email:</label>
            </p>
            <p class="field password">
                <input type="password" name="password" id="defaultFormCardPasswordEx">
                <label for="defaultFormCardPasswordEx">Password:</label>
            </p>
            <p class="field password">
                <input type="password" name="rep-pass" id="defaultFormCardRePasswordEx">
                <label for="defaultFormCardRePasswordEx">Repeat password:</label>
            </p>
            <p class="field submit">
                <button class="btn submit" type="submit">Register</button>
            </p>
            <p class="field">
                <span>If you already have profile click <a href="#/user/login">here</a></span>
            </p>
        </fieldset>
    </form>
</div>

{{>footer}}