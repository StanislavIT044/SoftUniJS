{{>header}}
<div class="content">
    {{#each causes}}
    <section>
        <h2>{{ cause.category }}</h2>
        <div class="articles">
            <article>
                <h3>{{ cause.title }}</h3>
                <p>{{ cause.content }}</p>
                <a href="#" class="btn details-btn">Details</a>
            </article>
        </div>
    </section>
    {{else }}

    {{/each}}
</div>

